<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/listPreferredItemHeight"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/linearLayout_main_list_item_quote_padding"
    android:paddingRight="@dimen/linearLayout_main_list_item_quote_padding">

    <TextView
        android:id="@+id/symbol"
        style="@style/StockSymbolTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="start|center_vertical"
        tools:text="@string/symbol_default"
        android:contentDescription="@string/symbol_contentDescription"/>

    <LinearLayout
        android:layout_width="@dimen/linearLayout_default_width_for_priceandchange"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="end">

        <TextView
            android:id="@+id/price"
            style="@style/BidPriceTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/price_marginEnd"
            tools:text="@string/price_default" />

        <TextView
            android:id="@+id/change"
            style="@style/PercentChangeTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/percent_change_pill_green"
            android:paddingLeft="@dimen/change_textview_padding"
            android:paddingRight="@dimen/change_textview_padding"
            tools:text="@string/change_default" />
    </LinearLayout>
</LinearLayout>
